{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "enabledManagers": ["docker-compose"],
  "ignorePaths": [
    "docker/morpheus/**",
    "docker/neo/.archive/**"
  ],

  "docker-compose": {
    "fileMatch": [
      "^docker/.*\\.ya?ml\\.j2$"
    ]
  }
}
