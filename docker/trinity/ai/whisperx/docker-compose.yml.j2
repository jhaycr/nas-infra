---
services:
  whisperx:
    image: ghcr.io/jim60105/whisperx:tiny-en
    container_name: whisperx
    # Uncomment below for GPU mode (requires NVIDIA Container Toolkit)
    # runtime: nvidia
    environment:
      # - NVIDIA_VISIBLE_DEVICES=all  # GPU environment variable
      - HF_HOME=/workspace/cache
    volumes:
      - ./input:/workspace/input
      - ./output:/workspace/output
      - cache:/workspace/cache
    command: ["--help"]  # Default command
    # Uncomment below section for GPU resource reservation
    # deploy:
    #   resources:
    #     reservations:
    #       devices:
    #         - driver: nvidia
    #           count: 1
    #           capabilities: [gpu]

volumes:
  cache: