---
services:

  qbittorrent:
    image: lscr.io/linuxserver/qbittorrent:latest
    container_name: qbittorrent
    environment:
      - WEBUI_PORT=8080
      - TORRENTING_PORT=6881
    volumes:
      - {{ docker_appdata_path }}/qbittorrent:/config
      - {{ nas_download_path }}/torrents:/downloads
    ports:
      - 8112:8080
      - 6881:6881
      - 6881:6881/udp