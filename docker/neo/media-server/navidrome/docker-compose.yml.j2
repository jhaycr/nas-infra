services:

  navidrome:
    container_name: navidrome
    image: deluan/navidrome:0.56.1
    ports:
      - "4533:4533"
    restart: unless-stopped
    environment:
      # Optional: put your config options customization here. Examples:
      ND_SCANSCHEDULE: 1h
      ND_LOGLEVEL: info  
      ND_SESSIONTIMEOUT: 24h
      ND_BASEURL: ""
    volumes:
      - {{ docker_appdata_path }}/navidrome:/data
      - {{ nas_storage_path }}/media/audio/music/General:/music:ro