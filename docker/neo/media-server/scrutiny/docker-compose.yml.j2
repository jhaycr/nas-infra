---
services:

 scrutiny:
  container_name: scrutiny
  image: ghcr.io/analogj/scrutiny:master-omnibus@sha256:18689773150d6b8b53c94a435f40f7b6e946fd4a6d40b44c64fa2154a5b38941
  cap_add:
    - SYS_RAWIO
  ports:
    - "8082:8080" # webapp
    - "8086:8086" # influxDB admin
  volumes:
    - /run/udev:/run/udev:ro
    - {{ docker_appdata_path }}/scrutiny:/opt/scrutiny/config
    - {{ docker_appdata_path }}/scrutiny-influxdb:/opt/scrutiny/influxdb
  devices:
    - "/dev/sda"
    - "/dev/sdb"
    - "/dev/sdc"
    - "/dev/sdd"
    - "/dev/sde"
    - "/dev/sdf"
    - "/dev/sdg"
    - "/dev/nvme0n1"