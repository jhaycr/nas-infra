---
services:

 mylar3:
  container_name: mylar3
  image: lscr.io/linuxserver/mylar3:latest
  ports:
    - "8090:8090"
  volumes:
    - {{ docker_appdata_path }}/mylar3:/config
    - {{ nas_download_path }}/mylar:/downloads
    - {{ nas_download_path }}/mylar:/storage/downloads
    - {{ nas_storage_path }}/comics:/storage/comics/