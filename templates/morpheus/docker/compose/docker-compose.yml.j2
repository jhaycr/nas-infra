name: compose

x-logging: &default-logging
  driver: json-file
  options:
    max-file: "10"
    max-size: 200k

x-common-keys: &common-keys
  restart: unless-stopped
  logging: *default-logging

x-common-env: &common-env
  PGID: "1000"
  PUID: "1000"
  TZ: America/Los_Angeles

x-common-volumes:
  - &localtime /etc/localtime:/etc/localtime:ro

########################### NETWORKS
networks:
  default:
    driver: bridge

  dockervlan:
    name: dockervlan
    driver: macvlan
    driver_opts:
      parent: vmbr0 # using ifconfig
    ipam:
      config:
        - subnet: "192.168.1.0/24"
          ip_range: "192.168.1.225/32"
          gateway: "192.168.1.1"

########################### SERVICES
services:
  # AdGuard Home - DNS AdBlocking
  adguardhome:
    # https://github.com/AdguardTeam/AdGuardHome/wiki/Configuration
    <<: *common-keys
    container_name: adguardhome
    image: adguard/adguardhome
    restart: always
    networks:
      dockervlan:
        ipv4_address: 192.168.1.225 # IP address inside the defined range
    ports:
      - 53:53/udp
      - 67:67/udp 
      - 68:68/tcp 
      - 68:68/udp 
      - 80:80/tcp 
      - 443:443/tcp 
      - 853:853/tcp 
      - 3000:3000/tcp 
    volumes:
      - {{ docker_home_appdata_path }}/appdata/adguardhome/conf:/opt/adguardhome/conf
      - {{ docker_home_appdata_path }}/appdata/adguardhome/work:/opt/adguardhome/work

  dockerproxy:
    <<: *common-keys
    image: ghcr.io/tecnativa/docker-socket-proxy:latest
    container_name: dockerproxy
    environment:
      - CONTAINERS=1 # Allow access to viewing containers
      - SERVICES=1 # Allow access to viewing services (necessary when using Docker Swarm)
      - TASKS=1 # Allow access to viewing tasks (necessary when using Docker Swarm)
      - POST=0 # Disallow any POST operations (effectively read-only)
    ports:
      - 127.0.0.1:2375:2375
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro # Mounted as read-only

  dozzle-agent:
    <<: *common-keys
    container_name: dozzle-agent
    image: amir20/dozzle:latest
    command: agent
    environment:
      - DOZZLE_HOSTNAME=morpheus
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
    ports:
      - 7007:7007

  glances:
    <<: *common-keys
    container_name: glances
    image: nicolargo/glances:latest-full
    restart: always
    pid: "host"
    privileged: true
    network_mode: "host"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
      - "/run/user/1000/podman/podman.sock:/run/user/1000/podman/podman.sock:ro"
      - {{ docker_home_appdata_path }}/glances:/glances/conf
    environment:
      - TZ=${TZ}
      - "GLANCES_OPT=-C /glances/conf/glances.conf -w"

  portainer-agent:
    <<: *common-keys
    container_name: portainer-agent
    # Use the portainer/agent Docker image
    image: portainer/agent
    ports:
      - "9001:9001" 
    volumes:
      # Mount the host's Docker socket into the container
      - /var/run/docker.sock:/var/run/docker.sock
      # Mount the host's Docker volumes into the container
      - /var/lib/docker/volumes:/var/lib/docker/volumes